$call   relink
$exit

update:
#        @newwcslab
        $call relink
        $call install
        ;


relink:
        $set    LIBS = "-lpros -ltbtables -lcurfit -lds -lstg"
        $update libpkg.a
        $update newwcslab.a
        $omake  x_xplot.x
#        $link   x_xplot.o wcslab.a libpkg.a wcslab.a $(LIBS) -o xx_xplot.e
        $link   x_xplot.o libpkg.a newwcslab.a $(LIBS) -o xx_xplot.e
        ;

install:
        $move   xx_xplot.e xraybin$x_xplot.e
        ;


newwcslab.a:
	@newwcslab
	;

libpkg.a:
        @imcontour
        @xexamine
        ;
