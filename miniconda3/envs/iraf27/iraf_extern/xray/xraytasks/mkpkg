#	mkpkg for the xraytasks directory
#

$call   relink
$exit

update:
	$call relink
	$call install
	;


relink:
	$set    LIBS = "-lpros -ltbtables" 
	$update libpkg.a
	$omake  x_xray.x
	$omake  debug.x
	$link   x_xray.o debug.o libpkg.a $(LIBS) -o xx_xray.e
	;

install:
	$move   xx_xray.e xraybin$x_xray.e
	;

										libpkg.a:
        rtname.x        <error.h>
	clobname.x      <error.h>
	fnlname.x	<error.h>
	imgimage.x	<error.h>
	imgclust.x	<error.h>
	getdevdim.x	<error.h>
        keychk.x
	;
