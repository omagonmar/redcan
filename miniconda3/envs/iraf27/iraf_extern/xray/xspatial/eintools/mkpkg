#
#	mkpkg for the EINTOOLS directory
#

$call   relink
$exit

update:
	$call relink
        $call install 
	;

relink:
	$set    LIBS = "-lpros -ltbtables -liminterp -lxtools -lcurfit -lsurfit -lgsurfit" 
	$update libgeotran.a
	$update libpkg.a
	$omake  x_eintools.x
	$omake  debug.x
	$link   x_eintools.o debug.o libpkg.a libgeotran.a ../../xdataio/eincdrom/libgentab.a $(LIBS) -o xx_eintools.e
	;

install:
        $move   xx_eintools.e xraybin$x_eintools.e
        ;
                                                

libgeotran.a:
	@geotran
	;

libpkg.a:
	@source
	@tables
	@_band2range
        @be_ds_rotate
	@cat_make
	@cat2exp
	@bkfac_make
	@calc_factors
	@src_cnts
	;

