# Make the detect package.

$call   relink
$exit

update:
        $call   relink
        $call   install
        ;

relink:
        $set    LIBS= "-lpros -ltbtables"
        $set    SPATLIB= "../libspatial.a"
        $update libpkg.a
        $omake  x_detect.x
        $link   x_detect.o libpkg.a $(SPATLIB) $(LIBS) -o xx_detect.e
        ;
