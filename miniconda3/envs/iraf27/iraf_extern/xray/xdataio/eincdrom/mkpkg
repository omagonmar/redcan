# Make the eincdrom package.

$call   relink
$exit

update:
#	@tables
	$call	relink
	$call	install
	;

relink:
	$set	LIBS= "-lpros -ltbtables"
        $update libpkg.a
        $update libgentab.a
        $omake	x_eincdrom.x
        $omake  debug.x
        $link	x_eincdrom.o debug.o libpkg.a libgentab.a $(LIBS) -o xx_eincdrom.e
        ;

install:
	$move xx_eincdrom.e xraybin$x_eincdrom.e
	;

libgentab.a:
        @tables
        ;

libpkg.a:
	@source	
	@_cp_wo_attr
	@_fits_find
	@_fitsnm_get
	@_spec2root
	@_specinfo
	@ecdinfo
	;

