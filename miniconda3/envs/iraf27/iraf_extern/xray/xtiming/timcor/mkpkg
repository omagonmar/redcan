$call   relink
$exit

update:
	$call relink
        $call   install
	;
				
				
relink:
	$set LIBS="-lpros -ltbtables -lxtools" 
	$set TIMLIB= "../libtiming.a"
	$update libpkg.a
	$omake  x_timcor.x
	$omake  debug.x
	$link   x_timcor.o debug.o libpkg.a $(TIMLIB) $(LIBS) -o xx_timcor.e
	;


install:
        $move xx_timcor.e xraybin$x_timcor.e
	;

libpkg.a:
	@apply_bary
	@calc_bary
	@scc_to_utc
        @utmjd
	;
