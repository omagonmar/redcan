# RVSAO SUMSPEC spectrum summing and rebinning
 
$checkout librv.a ../bin
$update	librv.a
$checkin librv.a ../bin
$exit

librv.a:
	t_sumspec.x	<imhdr.h> <imio.h> <fset.h> rvsao.h rvsao.com sum.com
	addspec.x	<imhdr.h> <smw.h> <imio.h> <fset.h> rvsao.com contin.com sum.com
	;
